{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "@michael-assessment/source"
    ],
    "paths": {
      "@michael-assessment/shadcn-components": [
        "packages/shadcn-components/src"
      ],
      "@michael-assessment/shadcn-utils": [
        "packages/shadcn-utils/src"
      ],
      "@michael-assessment/shadcn-components/*": [
        "packages/shadcn-components/src/*"
      ],
      "@michael-assessment/shadcn-utils/*": [
        "packages/shadcn-utils/src/*"
      ]
    }
  }
}
